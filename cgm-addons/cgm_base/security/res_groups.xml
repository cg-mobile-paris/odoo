<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="profile_category">
            <field name="name">User Profiles</field>
            <field name="sequence">-100</field>
        </record>

        <record model="ir.module.category" id="security_category">
            <field name="name">Role</field>
            <field name="sequence">1</field>
            <field name="parent_id" ref="profile_category"/>
        </record>

        <record id="group_adv" model="res.groups">
            <field name="name">ADV</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="security_category"/>
        </record>

        <record id="group_accounting_manager" model="res.groups">
            <field name="name">Accounting Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_adv'))]"/>
            <field name="category_id" ref="security_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Group Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_accounting_manager'))]"/>
            <field name="category_id" ref="security_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_director" model="res.groups">
            <field name="name">Group Director</field>
            <field name="implied_ids" eval="[(4, ref('group_manager')), (4, ref('base.group_system'))]"/>
            <field name="category_id" ref="security_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_system_administrator" model="res.groups">
            <field name="name">System Administrator</field>
            <field name="implied_ids" eval="[(4, ref('group_director')), (4, ref('base.group_system'))]"/>
            <field name="category_id" ref="security_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>


    </data>
</odoo>