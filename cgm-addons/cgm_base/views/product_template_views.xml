<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">50</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <label for="name" position="replace"/>
                <field name="name" position="replace"/>
                <field name="detailed_type" position="after">
                    <field name="name" class="o_text_overflow" placeholder="e.g. Cheese Burger" string="Product Name"/>
                </field>

            </field>
        </record>

        <record id="product_product_easy_edit_view" model="ir.ui.view">
            <field name="name">product.product.easy.edit.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <label for="name" position="replace"/>
                <field name="default_code" position="replace"/>
                <field name="name" position="replace"/>
            </field>
        </record>

        <record id="product_template_form_only_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="replace"/>
                <field name="priority" position="after">
                    <field name="default_code" class="o_text_overflow" placeholder="e.g. GUHMP13SU4GPRK" string="SKU Code" required="1"/>
                </field>
                <xpath expr="//div[hasclass('oe_title')]/h1" position="before">
                    <label for="default_code" string="SKU Code"/>
                </xpath>
            </field>
        </record>

        <record id="product_product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.product.normal.form.view.inherit</field>
            <field name="model">product.product</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="replace"/>
            </field>
        </record>

        <record id="product_template_kanban_view_inherit" model="ir.ui.view">
            <field name="name">product.template.kanban.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="default_code"/>
                </field>
                <xpath expr="//t[@t-if='record.default_code.value']" position="replace">
                    <field name="name"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>