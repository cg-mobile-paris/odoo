<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_device_form_view" model="ir.ui.view">
        <field name="name">product.device.form.view</field>
        <field name="model">product.device</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Product Licence">
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" invisible="active"/>
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="notes" placeholder="Write your notes here" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter" name="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="product_device_tree_view" model="ir.ui.view">
        <field name="name">product.device.tree.view</field>
        <field name="model">product.device</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Product Licences">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="product_device_search_view" model="ir.ui.view">
        <field name="name">product.device.search.view</field>
        <field name="model">product.device</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="notes"/>
            </search>
        </field>
    </record>

    <record id="product_device_action" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">product.device</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>