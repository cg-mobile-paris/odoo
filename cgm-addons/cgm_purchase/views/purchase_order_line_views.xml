<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_line_view_tree" model="ir.ui.view">
            <field name="name">purchase.order.line.view.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <tree string="Purchase Order Lines" create="false" delete="false">
                    <field name="order_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="partner_id" string="Supplier"/>
                    <field name="price_unit"/>
                    <field name="product_qty" sum="Total Qty"/>
                    <field name="qty_received"/>
                    <field name="qty_invoiced"/>
                    <field name="qty_to_invoice"/>
                    <field name="product_uom" groups="uom.group_uom"/>
                    <field name="price_subtotal" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="date_planned" widget="date"/>
                </tree>
            </field>
        </record>

        <record id="purchase_order_line_act_window_action" model="ir.actions.act_window">
            <field name="name">Purchase Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('display_type', '=', False)]</field>
            <field name="view_id" ref="cgm_purchase.purchase_order_line_view_tree"/>
        </record>

    </data>
</odoo>