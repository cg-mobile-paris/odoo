<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="state_of_needs_form_view" model="ir.ui.view">
        <field name="name">state.of.needs.form.view</field>
        <field name="model">purchase.order</field>
        <field name="priority" eval="999"/>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="replace">
                <div class="oe_title">
                    <span class="o_form_label">State of needs</span>
                    <h1>
                        <field name="priority" widget="priority" class="mr-3"/>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
            </xpath>

            <field name="partner_ref" position="after">
                <field name="licence_id"/>
                <field name="device_ids" widget="many2many_tags" force_save="1"/>
            </field>

            <field name="state" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <xpath expr="//header" position="replace">
                <header>
                    <button name="confirm_state_of_orders" type="object" string="Confirm"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,purchase" readonly="1" invisible="1"/>
                    <button name="button_cancel" states="draft,to approve,sent,purchase" string="Cancel" type="object" data-hotkey="x"/>
                </header>
            </xpath>

            <xpath expr="//tree" position="inside">
                <field name="product_domain" invisible="1"/>
            </xpath>

            <xpath expr="//tree//field[@name='product_id']" position="attributes">
                <attribute name="domain">product_domain</attribute>
            </xpath>
        </field>
    </record>

    <record id="state_of_needs_tree_view" model="ir.ui.view">
        <field name="name">purchase.order.inherit.purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="licence_id" invisible="context.get('show_fields', 1)"/>
                <field name="device_ids" invisible="context.get('show_fields', 1)" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="state_of_needs_action" model="ir.actions.act_window">
        <field name="name">State of needs</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
        <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
        <field name="domain">[('type', '=', 'state_of_needs')]</field>
        <field name="context">{'default_type': 'state_of_needs', 'show_fields': 0}</field>
    </record>

    <record id="state_of_needs_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="state_of_needs_action"/>
        <field name="view_id" ref="purchase.purchase_order_kpis_tree"/>
    </record>

    <record id="state_of_needs_action_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="act_window_id" ref="state_of_needs_action"/>
        <field name="view_id" ref="purchase.view_purchase_order_kanban"/>
    </record>

    <record id="state_of_needs_action_view_pivot" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">pivot</field>
        <field name="act_window_id" ref="state_of_needs_action"/>
        <field name="view_id" ref="purchase.purchase_order_pivot"/>
    </record>

    <record id="state_of_needs_action_view_graph" model="ir.actions.act_window.view">
        <field name="sequence" eval="4"/>
        <field name="view_mode">graph</field>
        <field name="act_window_id" ref="state_of_needs_action"/>
        <field name="view_id" ref="purchase.purchase_order_graph"/>
    </record>

    <record id="state_of_needs_action_view_calendar" model="ir.actions.act_window.view">
        <field name="sequence" eval="5"/>
        <field name="view_mode">calendar</field>
        <field name="act_window_id" ref="state_of_needs_action"/>
        <field name="view_id" ref="purchase.purchase_order_calendar"/>
    </record>

    <record id="state_of_needs_action_view_activity" model="ir.actions.act_window.view">
        <field name="sequence" eval="6"/>
        <field name="view_mode">activity</field>
        <field name="act_window_id" ref="state_of_needs_action"/>
        <field name="view_id" ref="purchase.purchase_order_view_activity"/>
    </record>

    <record id="state_of_needs_action_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="state_of_needs_action"/>
        <field name="view_id" ref="state_of_needs_form_view"/>
    </record>

    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="domain">[('state','in',('purchase', 'done')), ('type', '=', 'quotation')]</field>
    </record>

</odoo>