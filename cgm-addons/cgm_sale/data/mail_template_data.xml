<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="email_template_stock_state" model="mail.template">
            <field name="name">Stock State : Send by email</field>
            <field name="model_id" ref="sale_management.model_sale_order_template"/>
            <field name="subject">{{ object.company_id.name }} Stock State (Ref {{ object.name or 'n/a' }})
            </field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ ','.join(str(idx) for idx in object.partner_ids.ids) }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear,
                        <br/>
                        <br/>
                        Your stock state is ready for review.
                        <br/>
                        <br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                        <br/>
                        Regards,
                    </p>
                </div>
            </field>
            <field name="report_name">Stock State # {{(object.name or '').replace('/','_')}}</field>
            <field name="lang">{{ user.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>