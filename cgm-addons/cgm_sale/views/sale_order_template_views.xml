<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_template_view_form_state" model="ir.ui.view">
        <field name="name">sale.order.template.form.state</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="licence_id" attrs="{'invisible': [('type', '!=', 'state')], 'required': [('type', '=', 'state')]}"/>
                <field name="partner_ids" attrs="{'invisible': [('type', '!=', 'state')], 'required': [('type', '=', 'state')]}" widget="many2many_tags"/>
            </field>

            <field name="company_id" position="before">
                <field name="type" attrs="{'invisible': [('type', '!=', 'state')], 'required': [('type', '=', 'state')]}"/>
            </field>

            <xpath expr="//sheet" position="before">
                <header>
                    <field name="state" widget="statusbar" attrs="{'invisible': [('type', '!=', 'state')], 'required': [('type', '=', 'state')]}"/>
                </header>
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="action_view_orders_n_quotations" type="object" icon="fa-database" attrs="{'invisible': [('type', '!=', 'state')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="order_ids_count"/>
                        </span>
                        <span class="o_stat_text">Quotations / Orders</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <record id="sale_order_template_view_tree_state" model="ir.ui.view">
        <field name="name">sale.order.template.tree.state</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="sale_management.sale_order_template_view_tree"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="type" invisible="1"/>
                <field name="licence_id" invisible="context.get('state_fields', 1)"/>
                <field name="state" invisible="context.get('state_fields', 1)"/>
            </field>
        </field>
    </record>

    <record id="stock_state_action" model="ir.actions.act_window">
        <field name="name">Stock states</field>
        <field name="res_model">sale.order.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'state')]</field>
        <field name="context">{'default_type': 'state', 'state_fields': 0}</field>
    </record>
</odoo>