<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
            <xpath expr="//th[@name='th_sm_product']" position="before">
                <th name="th_sm_sku_code" class="text-center">SKU
                    <br/>
                    Code
                </th>
            </xpath>
            <xpath expr="//td[1]" position="replace">
                <td name="td_sm_product">
                    <span t-field="move.description_picking"/>
                </td>
            </xpath>
            <xpath expr="//td[1]" position="before">
                <td name="td_sm_sku_code" class="text-center">
                    <span t-field="move.product_id"/>
                </td>
            </xpath>

            <xpath expr="//span[@t-field='move.product_uom_qty']//..//span[2]" position="attributes">
                <attribute name="t-if">move.product_uom.id != move.env.ref('uom.product_uom_categ_unit').id</attribute>
            </xpath>

            <xpath expr="//span[@t-field='move.quantity_done']//..//span[2]" position="attributes">
                <attribute name="t-if">move.product_uom.id != move.env.ref('uom.product_uom_categ_unit').id</attribute>
            </xpath>
        </template>

    </data>
</odoo>