<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_picking_document_inherit" inherit_id="stock.report_picking">
            <xpath expr="//th[@name='th_product']" position="before">
                <th name="th_sku_code" class="text-center">
                    <strong>SKU Code</strong>
                </th>
            </xpath>
            <xpath expr="//t[@t-foreach='o.move_line_ids_without_package']/tr/td" position="replace">
                <td name="td_sku_code" class="text-center">
                    <span t-field="ml.product_id.default_code"/>
                </td>
                <td name="td_product">
                    <span t-field="ml.product_id.name"/>
                    <br/>
                    <span t-field="ml.product_id.description_picking"/>
                </td>
            </xpath>
        </template>

    </data>
</odoo>