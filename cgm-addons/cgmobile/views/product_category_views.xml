<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_category_search_form_view" model="ir.ui.view">
        <field name="name">product_category.search.form</field>
        <field name="model">cgmobile.product_category</field>
        <field name="arch" type="xml">
            <search string="Product Category">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_category_form">
        <field name="name">product_category.form</field>
        <field name="model">cgmobile.product_category</field>
        <field name="arch" type="xml">
            <form string="Product Category">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" string="Name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_category_tree">
        <field name="name">product_category.tree</field>
        <field name="model">cgmobile.product_category</field>
        <field name="arch" type="xml">
            <tree string="Product Category">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_category_product_search_form_view" model="ir.ui.view">
        <field name="name">product_category.product.search.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="product_category_id"/>
                <filter string="Product Category" name="groupby_product_category" domain="[]" context="{'group_by':'product_category_id'}"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_category">
        <field name="name">Product Categories</field>
        <field name="res_model">cgmobile.product_category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Category Management" id="menu_product_category_management" action="action_product_category" parent="sale.prod_config_main"/>
</odoo>
