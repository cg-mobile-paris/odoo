    <record model="ir.actions.act_window" id="action_product_color">
        <field name="name">Product Colors</field>
        <field name="res_model">cgmobile.product_color</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Color Management" id="menu_product_color_management" action="action_product_color" parent="sale.prod_config_main"/>
