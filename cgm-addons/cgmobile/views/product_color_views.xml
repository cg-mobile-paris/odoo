<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_color_search_form_view" model="ir.ui.view">
        <field name="name">product_color.search.form</field>
        <field name="model">cgmobile.product_color</field>
        <field name="arch" type="xml">
            <search string="Product Color">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_color_form">
        <field name="name">product_color.form</field>
        <field name="model">cgmobile.product_color</field>
        <field name="arch" type="xml">
            <form string="Product Color">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" string="Name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_color_tree">
        <field name="name">product_color.tree</field>
        <field name="model">cgmobile.product_color</field>
        <field name="arch" type="xml">
            <tree string="Product Color">
                <field name="name"/>
            </tree>
        </field>
    </record>

