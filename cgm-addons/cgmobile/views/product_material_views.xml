<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_material_search_form_view" model="ir.ui.view">
        <field name="name">product_material.search.form</field>
        <field name="model">cgmobile.product_material</field>
        <field name="arch" type="xml">
            <search string="Product Material">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_material_form">
        <field name="name">product_material.form</field>
        <field name="model">cgmobile.product_material</field>
        <field name="arch" type="xml">
            <form string="Product Material">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" string="Name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_material_tree">
        <field name="name">product_material.tree</field>
        <field name="model">cgmobile.product_material</field>
        <field name="arch" type="xml">
            <tree string="Product Material">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_material_product_search_form_view" model="ir.ui.view">
        <field name="name">product_material.product.search.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="product_material_id"/>
                <filter string="Product Material" name="groupby_product_material" domain="[]" context="{'group_by':'product_material_id'}"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_material">
        <field name="name">Product Materials</field>
        <field name="res_model">cgmobile.product_material</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Material Management" id="menu_product_material_management" action="action_product_material" parent="sale.prod_config_main"/>
</odoo>
