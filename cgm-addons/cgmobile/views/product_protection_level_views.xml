<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_protection_level_search_form_view" model="ir.ui.view">
        <field name="name">product_protection_level.search.form</field>
        <field name="model">cgmobile.product_protection_level</field>
        <field name="arch" type="xml">
            <search string="Product Protection Level">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_protection_level_form">
        <field name="name">product_protection_level.form</field>
        <field name="model">cgmobile.product_protection_level</field>
        <field name="arch" type="xml">
            <form string="Product Protection Level">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" string="Name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_protection_level_tree">
        <field name="name">product_protection_level.tree</field>
        <field name="model">cgmobile.product_protection_level</field>
        <field name="arch" type="xml">
            <tree string="Product Protection Level">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_protection_level_product_search_form_view" model="ir.ui.view">
        <field name="name">product_protection_level.product.search.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="product_protection_level_id"/>
                <filter string="Product Protection Level" name="groupby_product_protection_level" domain="[]" context="{'group_by':'product_protection_level_id'}"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_protection_level">
        <field name="name">Product Protection Levels</field>
        <field name="res_model">cgmobile.product_protection_level</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Protection Level Management" id="menu_product_protection_level_management" action="action_product_protection_level" parent="sale.prod_config_main"/>
</odoo>
