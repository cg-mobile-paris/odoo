<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_sub_category_search_form_view" model="ir.ui.view">
        <field name="name">product_sub_category.search.form</field>
        <field name="model">cgmobile.product_sub_category</field>
        <field name="arch" type="xml">
            <search string="Product Sub Category">
                <field name="name"/>
                <field name="category_id" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_sub_category_form">
        <field name="name">product_sub_category.form</field>
        <field name="model">cgmobile.product_sub_category</field>
        <field name="arch" type="xml">
            <form string="Product Sub Category">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" string="Name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="category_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_sub_category_tree">
        <field name="name">product_sub_category.tree</field>
        <field name="model">cgmobile.product_sub_category</field>
        <field name="arch" type="xml">
            <tree string="Product Sub Category">
                <field name="category_id" />
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_sub_category_product_search_form_view" model="ir.ui.view">
        <field name="name">product_sub_category.product.search.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="product_sub_category_id"/>
                <filter string="Product Sub Category" name="groupby_product_sub_category" domain="[]" context="{'group_by':'product_sub_category_id'}"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_sub_category">
        <field name="name">Product Sub Categories</field>
        <field name="res_model">cgmobile.product_sub_category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Sub Category Management" id="menu_product_sub_category_management" action="action_product_sub_category" parent="sale.prod_config_main"/>
</odoo>
