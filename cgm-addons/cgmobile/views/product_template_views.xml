<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.product.tree.cgmobile</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="upc_code" optional="hide" />
                <field name="product_color_id" optional="hide" />
                <field name="product_category_id" optional="hide" />
                <field name="product_sub_category_id" optional="hide" />
                <field name="product_material_id" optional="hide" />
                <field name="product_protection_level_id" optional="hide" />
                <field name="device_type_id" optional="hide" />
<!--                <field name="device_brand_id" optional="hide" />-->
                <field name="device_model_id" optional="hide" />
            </xpath>
        </field>
    </record>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.product.form.cgmobile</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="upc_code" invisible="product_variant_count > 1" />
            </xpath>
<!--            <xpath expr="//field[@name='product_brand_id']" position="replace">-->
<!--            </xpath>-->
            <xpath expr="//page[@name='general_information']/group[1]" position="after">
                <group>
                    <group string="Product Information" name="product_qualif_product">
<!--                        <field name="product_brand_id" />-->
                        <field name="product_color_id" />
                        <field name="product_category_id" />
                        <field name="product_sub_category_id" domain="['|', ('category_id', '=', product_category_id), ('category_id', '=', False)]" />
                        <field name="product_material_id" />
                        <field name="product_protection_level_id" />
                        <field name="product_collection_id" />
                    </group>
                    <group string="Device Information" name="product_qualif_device">
                        <field name="device_type_id" />
<!--                        <field name="device_brand_id" />-->
                        <field name="device_model_id"/>
<!--                        FIXME v17 remove domain-->
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <record id="product_template_kanban_view" model="ir.ui.view" >
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
<!--            <xpath expr="//kanban[1]/templates[1]/t[1]/div[1]/div[2]/strong[1]/field[@name='name']" position="before">-->
<!--                <span class="text-secondary"><field name="product_brand_id" /></span>-->
<!--            </xpath>-->
<!--            <xpath expr="//field[@name='uom_id']" position="after">-->
<!--                <div name="device_info" class="mt-1" t-if="record.device_model_id.value" >-->
<!--                    Device: <field name="device_brand_id" />-->
<!--                    <field name="device_model_id" />-->
<!--                </div>-->
<!--            </xpath>-->
            </data>
        </field>
<!--        <field name="field_parent" eval="False"/>-->
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="model">product.template</field>
        <field name="name">CG-Mobile: Product.template.product.kanban customization</field>
        <field name="priority">99</field>
        <field name="type">kanban</field>
    </record>
</odoo>